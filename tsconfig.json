{
    "compilerOptions": {
        "lib": [
            "ES2021",
            "DOM"
        ],
        "jsx": "react-jsx",
        "module": "ES2022",
        "target": "ES2017",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "@/*": [
                "examples/platform/web/*",
                "examples/platform/native/*",
                "examples/platform/node/*",
                "examples/platform/universal/*"
            ],
            "libs/*": [
                "libs/*"
            ],
            "sky/*": [
                "*"
            ],
            "examples/web/*": [
                "examples/platform/web/*"
            ],
            "examples/native/*": [
                "examples/platform/native/*"
            ],
            "examples/node/*": [
                "examples/platform/node/*"
            ],
            "examples/universal/*": [
                "examples/platform/universal/*"
            ],
            "public/*": [
                "examples/platform/web/public/*"
            ]
        }
    },
    "include": [
        "sky.config.ts",
        "deploy.ts",
        ".",
        "examples/platform/web",
        "examples/platform/native",
        "examples/platform/node",
        "examples/platform/universal",
        "examples/platform/web/public"
    ],
    "exclude": [
        "node_modules"
    ]
}