{
    "compilerOptions": {
        "lib": ["ES2021", "DOM"],
        "jsx": "react-jsx",
        "module": "ES2022",
        "target": "ES2017",
        "moduleResolution": "node",

        "esModuleInterop": true,

        "typeRoots": [
            "../Modules/node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "*": ["../WildberriesPackages//*", "../Modules/includes/*", "../Modules/node_modules/*"],
            "front-end/*" : ["front-end/*"],
          "back-end/*" : ["back-end/*"],
          "landing/*" : ["landing/*"],
          "shared/*" : ["shared/*"]
        }
    },
    "include": ["front-end", "back-end", "landing", "shared", "../Modules/node_modules/"],
    "exclude": ["node_modules", ../WildberriesPackages//node_modules "../Modules/node_modules"]
}
        
