{
    "compilerOptions": {
        "lib": [
            "ES2021",
            "DOM"
        ],
        "jsx": "react-jsx",
        "module": "ES2022",
        "target": "ES2017",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "@/*": [
                "tests/web/*",
                "tests/native/*",
                "tests/node/*",
                "tests/universal/*"
            ],
            "sky/*": [
                "*"
            ],
            "tests/web/*": [
                "tests/web/*"
            ],
            "tests/native/*": [
                "tests/native/*"
            ],
            "tests/node/*": [
                "tests/node/*"
            ],
            "tests/universal/*": [
                "tests/universal/*"
            ]
        }
    },
    "include": [
        ".",
        "tests/web",
        "tests/native",
        "tests/node",
        "tests/universal"
    ],
    "exclude": [
        "node_modules"
    ]
}