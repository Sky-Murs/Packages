{
    "compilerOptions": {
        "lib": [
            "ES2021",
            "DOM"
        ],
        "jsx": "react-jsx",
        "module": "ES2022",
        "target": "ES2017",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "node_modules/*"
            ],
            "tests/browser/*": [
                "tests/browser/*"
            ],
            "tests/node/*": [
                "tests/node/*"
            ],
            "tests/native/*": [
                "tests/native/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}