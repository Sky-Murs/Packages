{
    "compilerOptions": {
        "lib": [
            "ES2021",
            "DOM"
        ],
        "jsx": "react-jsx",
        "module": "ES2022",
        "target": "ES2017",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "node_modules/*"
            ],
            "test-browser/*": [
                "tests/browser/*"
            ],
            "test-native/*": [
                "tests/native/*"
            ]
        }
    },
    "include": [
        "./",
        "tests/browser",
        "tests/native"
    ],
    "exclude": [
        "node_modules"
    ]
}