{
    "compilerOptions": {
        "lib": [
            "ES2021",
            "DOM"
        ],
        "jsx": "react-jsx",
        "module": "ES2022",
        "target": "ES2017",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "tests/browser/*",
                "tests/node/*",
                "tests/native/*",
                "*",
                "node_modules/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}